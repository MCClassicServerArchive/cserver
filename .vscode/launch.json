{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/x64dbg/server.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/x64dbg",
            "console": "integratedTerminal",
            // "preLaunchTask": "Build debug"
        },
        {
            "name": "Launch testmode",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/x64dbg/server.exe",
            "args": ["testmode"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/x64dbg",
            "console": "integratedTerminal",
            "preLaunchTask": "Build debug"
        },
        {
            "name": "Launch debug (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/x86_64-linux-gnu-dbg/server",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/x86_64-linux-gnu-dbg",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build debug"
        },
    ]
}
