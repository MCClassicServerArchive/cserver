{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build debug",
			"type": "shell",
			"windows" : {
				"command": "build.bat"
			},
			"linux": {
				"command": "./build"
			},
			"args": ["wall", "dbg"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Build release",
			"type": "shell",
			"windows" : {
				"command": "build.bat"
			},
			"linux": {
				"command": "./build"
			},
			"args": ["wall"],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$msCompile"
		}
	]
}
